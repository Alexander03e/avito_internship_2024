{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "semi": true,
                "singleQuote": true,
                "printWidth": 150,
                "trailingComma": "all",
                "useTabs": false,
                "tabWidth": 4,
                "jsxSingleQuote": true,
                "bracketSpacing": true,
                "arrowParens": "avoid"
            }
        ],
        "@typescript-eslint/no-unused-vars": "warn",
        "@typescript-eslint/no-explicit-any": "off",
        "prefer-const": "warn",
        "no-console": "warn"
    }
}
